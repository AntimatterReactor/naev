<?xml version="1.0" encoding="UTF-8"?>
<difficulties>
 <difficulty name="Default" default="1">
  <description>Standard difficulty mode.</description>
 </difficulty>
 <difficulty name="Story Mode">
  <description>Significantly reduces the difficulty of the game, allowing to concentrate on the story.</description>
  <armour_mod>100</armour_mod>
  <shield_mod>100</shield_mod>
  <energy_mod>100</energy_mod>
  <fwd_damage>50</fwd_damage>
  <tur_damage>50</tur_damage>
  <launch_damage>50</launch_damage>
  <fbay_damage>50</fbay_damage>
  <thrust_mod>25</thrust_mod>
  <speed_mod>25</speed_mod>
  <turn_mod>15</turn_mod>
  <time_mod>-20</time_mod>
  <time_speedup>125</time_speedup>
 </difficulty>
 <difficulty name="Slow Mode">
  <description>Makes gameplay run at half speed. Useful if you have difficulties with reaction times.</description>
  <time_mod>-50</time_mod>
 </difficulty>
 <difficulty name="Easy Mode">
  <description>Makes the game easier for the player, without trivializing most things.</description>
  <armour_mod>50</armour_mod>
  <shield_mod>50</shield_mod>
  <energy_mod>50</energy_mod>
  <fwd_damage>15</fwd_damage>
  <tur_damage>15</tur_damage>
  <launch_damage>15</launch_damage>
  <fbay_damage>15</fbay_damage>
  <thrust_mod>10</thrust_mod>
  <speed_mod>10</speed_mod>
  <turn_mod>10</turn_mod>
 </difficulty>
 <difficulty name="Masochist Mode">
  <description>Makes the game significantly harder for the player.</description>
  <armour_mod>-25</armour_mod>
  <shield_mod>-25</shield_mod>
  <energy_mod>-25</energy_mod>
  <thrust_mod>-5</thrust_mod>
  <speed_mod>-5</speed_mod>
  <turn_mod>-5</turn_mod>
  <fwd_damage>-10</fwd_damage>
  <tur_damage>-10</tur_damage>
  <launch_damage>-10</launch_damage>
  <fbay_damage>-10</fbay_damage>
 </difficulty>
</difficulties>
