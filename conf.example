-- This is a comment
-- Configuration file is written in lua
-- Long comments can be done with --[[ and ended with ]] (or ]]--).

--[[
-- Data file.  Should have the actual ndata file in the path.
--]]
--data = "ndata"

--[[
-- OpenGL.
--]]
--fsaa = 8 -- Full Scene Anti Aliasing
--vsync = false -- Syncronize rendering to vertical refresh rate
--vbo = true -- Enable/Disable Vertex Buffer Objects

--[[
-- Window.
--]]
--width  = 800 -- Window width.
--height = 600 -- Window height.
--fullscreen = false -- Whether or not to use fullscreen.
--scalefactor = 1. -- Scale factor of the screen.  2. would make screen twice as big.

--[[
-- FPS.
--]]
--showfps = false -- Whether or not to display them on screen.
--maxfps = 200 -- 0 is unlimited fps

--[[
-- Misc.
--]]
--zoom_min = 0.5 -- Maximum zoom to go to (zoom out)
--zoom_max = 1. -- Minimum zoom to go to (zoom in)
--zoom_speed = 0.25 -- Maximum zoom speed change
--afterburn_sensitivity = 250 -- ms between accel taps to trigger afterburner

--[[
-- Sound.
--]]
--nosound = false
--sound = 0.4
--music = 0.8

--[[
-- Joystick.
--]]
-- can be by id number or substring of joystick name
--joystick = nil -- default is no joystick
--joystick = 0
--joystick = "Precision"


--[[
-- Keybindings.
--
-- * type can be keyboard, jaxispos, jaxisneg or jbutton
--   * keyboard has the key refer to the keyboard which can be by keysym or name.
-               You can get the keysym on linux with xev.
--   * jaxispos Refers to positive axis.  In the case the key supports absolute
--              usage, it'll use absolute value, otherwise it'll act like a button.
--              key should be the axis number.
--   * jaxisneg Refers to the negative values on the axis, works like jaxispos.
--   * jbutton Button on joystick, key should be the button number.
--
-- * key depends on what the type is.
--
-- * mod is only used in the case of keyboard and indicates modifier.  Valid modifiers
--       are none, any, lctrl, rctrl, lshift, rshift, lmeta, rmeta, lalt, ralt.
--       By default none is used.
--]]

-- Movement.
--accel          = { type = "keyboard", key = "up", mod = "any" }
--left           = { type = "keyboard", key = "left", mod = "any" }
--right          = { type = "keyboard", key = "right", mod = "any" }
--reverse        = { type = "keyboard", key = "down", mod = "any" }
--afterburn      = { type = "keyboard", key = 0 }

-- Targetting.
--target_next    = { type = "keyboard", key = "tab" }
--target_prev    = { type = "keyboard", key = "tab", mod = "lctrl" }
--target_nearest = { type = "keyboard", key = "T" }
--target_nextHostile = { type = "keyboard", key = "R", mod = "lctrl" }
--target_prevHostile = { type = "keyboard", key = 0 }
--target_hostile = { type = "keyboard", key = "R" }

-- Fighting.
--primary        = { type = "keyboard", key = "space", mod = "any" }
--face           = { type = "keyboard", key = "A" }
--board          = { type = "keyboard", key = "B" }
--safety         = { type = "keyboard", key = "S", mod = "lctrl" }

-- Fire modes.
--weap_all       = { type = "keyboard", key = "1" }
--weap_turret    = { type = "keyboard", key = "2" }
--weap_forward   = { type = "keyboard", key = "3" }

-- Secondary weapons.
--secondary      = { type = "keyboard", key = "left shift", mod = "any" }
--secondary_next = { type = "keyboard", key = "W" }
--secondary_prev = { type = "keyboard", key = "W", mod = "lctrl" }

-- Escorts.
--e_targetNext   = { type = "keyboard", key = "E" }
--e_targetPrev   = { type = "keyboard", key = "E", mod = "lctrl" }
--e_attack       = { type = "keyboard", key = "F" }
--e_hold         = { type = "keyboard", key = "G" }
--e_return       = { type = "keyboard", key = "C", mod = "lctrl" }
--e_clear        = { type = "keyboard", key = "C" }

-- Space navigation.
--autonav        = { type = "keyboard", key = "J", mod = "lctrl" }
--target_planet  = { type = "keyboard", key = "P" }
--land           = { type = "keyboard", key = "L" }
--thyperspace    = { type = "keyboard", key = "H" }
--starmap        = { type = "keyboard", key = "M" }
--jump           = { type = "keyboard", key = "J" }

-- Communication.
--hail           = { type = "keyboard", key = "Y" }

-- Misc.
--mapzoomin      = { type = "keyboard", key = "[+]", mod = "any" }
--mapzoomout     = { type = "keyboard", key = "[-]", mod = "any" }
--screenshot     = { type = "keyboard", key = "[*]", mod = "any" }
--pause          = { type = "keyboard", key = "Z" }
--speed          = { type = "keyboard", key = "`", mod = "any" }
--menu           = { type = "keyboard", key = "escape", mod = "any" }
--info           = { type = "keyboard", key = "I" }
--console        = { type = "keyboard", key = "f2" }

